<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/main_activity_coin_logo"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginTop="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/coin_image" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/main_activity_valor_real"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="@string/r"
            android:layout_margin="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_activity_coin_logo">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/main_activity_valor_dolar"
            android:textSize="18sp"
            tools:text="USD $40,00"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/main_activity_valor_real"
            app:layout_constraintEnd_toEndOf="@+id/main_activity_valor_real"
            app:layout_constraintTop_toBottomOf="@+id/main_activity_valor_real"/>

        <TextView
            android:textSize="18sp"
            tools:text="EUR $40,00"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/main_activity_valor_dolar"
            app:layout_constraintEnd_toEndOf="@+id/main_activity_valor_dolar"
            app:layout_constraintTop_toBottomOf="@+id/main_activity_valor_dolar"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>